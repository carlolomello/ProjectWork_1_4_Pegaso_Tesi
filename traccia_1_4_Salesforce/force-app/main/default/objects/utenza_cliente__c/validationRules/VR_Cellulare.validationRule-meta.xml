<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>VR_Cellulare</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX(cellulare__c, &quot;^[0-9]{9,15}$&quot;))</errorConditionFormula>
    <errorDisplayField>cellulare__c</errorDisplayField>
    <errorMessage>Il numero di cellulare deve contenere solo cifre e avere una lunghezza tra 9 e 15 caratteri.</errorMessage>
</ValidationRule>
